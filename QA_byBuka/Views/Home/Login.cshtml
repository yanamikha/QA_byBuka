@model QA_byBuka.Models.User

<h1>Войти</h1>
<link href="Stylesheet.css" rel="stylesheet" type="text/css" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="login">Логин</label>
                <input name="login" asp-for="login" />
                <span asp-validation-for="login"></span>
            </div>
            <div class="form-group">
                <label asp-for="password">Пароль</label>
                <input name="password" asp-for="password" />
                <span asp-validation-for="password"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-controller="Login" asp-action="Signin" value="Зарегистрироваться" />
                <input type="submit" asp-controller="Login" asp-action="Index" value="Войти" />

            </div>
        </form>
    </div>
</div>
